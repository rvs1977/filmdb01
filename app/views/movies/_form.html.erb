<%= form_for(@movie, html: { multipart: true} ) do |f| %>
  <% if @movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
      <% @movie.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  
  <div class="field rvs select box">
    <%= f.label :genre_id %><br>
    <%= f.collection_select(:genre_id, Genre.all, :id, :genre) %>
  </div>

  <div class="field rvs select box">
    <%= f.label :year_id %><br>
    <%= f.collection_select(:year_id, Year.all, :id, :year) %>
  </div>

  <div class="field">
    <%= f.label :summary %><br>
    <%= f.text_area :summary %>
  </div>
  

  <div class="field rvs radio button">
    <%= f.label :rating_id %><br>

    <%= f.radio_button :rating_id, '1' %>
    <%= label :rating_id_1, 'Meget dårlig' %>

    <%= f.radio_button :rating_id, '2' %>
    <%= label :rating_id_2, 'Dårlig' %>

    <%= f.radio_button :rating_id, '3' %>
    <%= label :rating_id_3, 'Middel' %>

    <%= f.radio_button :rating_id, '4' %>
    <%= label :rating_id_4, 'God' %>

    <%= f.radio_button :rating_id, '5' %>
    <%= label :rating_id_5, 'Meget god' %>
  </div>
  
  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
